{
  "name": "vctrtvfrrr/billing-system",
  "description": "PoC de um sistema de cobran√ßas baseado em disparos de e-mails com boletos.",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Victor Ferreira",
      "email": "victor@ferreira.id"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "monolog/monolog": "^3.3",
    "php-di/php-di": "^7.0",
    "robmorgan/phinx": "^0.13.4",
    "slim/psr7": "^1.6",
    "slim/slim": "^4.11",
    "vlucas/phpdotenv": "^5.5"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.16",
    "jangregor/phpstan-prophecy": "^1.0.0",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/extension-installer": "^1.2.0",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.6.4",
    "symfony/yaml": "^6.2"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "test": "phpunit",
    "lint": "php-cs-fixer fix --diff --verbose --dry-run .",
    "lint-fix": "php-cs-fixer fix"
  }
}
